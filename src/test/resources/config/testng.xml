<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="All Tests" parallel="methods" thread-count="4">
    <listeners>
        <listener class-name="support.listeners.GlobalTestListener"/>
    </listeners>

    <test name="UI">
        <packages>
            <package name="ui.tests"/>
        </packages>
    </test>

    <test name="API">
        <packages>
            <package name="api.tests"/>
        </packages>
    </test>
</suite>
